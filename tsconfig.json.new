{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@db": ["./db/index.ts"],
      "@server/*": ["./server/*"],
      "@queues/*": ["./packages/queues/*"],
      "@core/*": ["./packages/core/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}